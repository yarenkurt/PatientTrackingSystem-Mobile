<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReminderActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:id="@+id/reminder_layout_top"
    android:orientation="vertical"
    android:background="@drawable/header_background">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/reminder_title"
        android:hint="Reminder Title"
        android:textSize="25sp"
        android:lines="4"
        android:minLines="4"
        android:textColor="@color/white"
        android:scrollHorizontally="false"
        android:inputType="textCapWords|textMultiLine"/>

</LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/reminder_layout_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:text="Details"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <RelativeLayout
                android:id="@+id/reminder_date"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_view_day"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/date_icon">

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reminder Starting Date"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/set_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select Date"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reminder_time"
                android:layout_width="match_parent"
                android:layout_height="72dp"

                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_access_time"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/time_icon">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reminder Starting Time"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/set_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select Time"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reminder_repeat"
                android:layout_width="match_parent"
                android:layout_height="72dp">
                <ImageView
                    android:id="@+id/repeat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_sync"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:id="@+id/repeat_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/repeat_icon">

                    <TextView
                        android:id="@+id/repeat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reminder Repeat"
                        android:textSize="15sp"/>

                </LinearLayout>
                <Switch
                    android:id="@+id/repeat_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:textOn="On"
                    android:textOff="Off"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reminder_repeat_no"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/repeat_no_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_unfold_more"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/repeat_no_icon">

                    <TextView
                        android:id="@+id/repeat_no_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Reminder Repetion Interval"
                        android:textSize="15dp"/>
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/reminder_layout_top"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_reminder"
        android:clickable="true"
        android:onClick="Save"
        android:src="@drawable/ic_check_fab"
        android:backgroundTint="@color/secondaryDarkColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="40dp"
        />



</RelativeLayout>
